class Solution:
    def minimumDifference(self, nums: List[int], k: int) -> int:
        
        nums.sort()
        
        mn = nums[-1]
        if k==1:
            return 0
        for i in range(len(nums)-k+1):
            
            if nums[i+k-1]-nums[i]<=mn:
                mn = nums[i+k-1] - nums[i]
                
        return mn

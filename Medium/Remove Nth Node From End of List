# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def removeNthFromEnd(self, head: Optional[ListNode], n: int) -> Optional[ListNode]:
        
        length = 0
        cur = head
        
        while cur:
            length +=1
            cur = cur.next
        
        if length-n==0:
            return head.next
        
        cnt = 0
        
        cur = head
        prev = None
        while cur:
            
            cnt+=1
            
            if cnt==length-n:
                cur.next = cur.next.next
                cur = cur.next
            else:
                cur = cur.next
            
        return head

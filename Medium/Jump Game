class Solution:
    def canJump(self, nums: List[int]) -> bool:
        
        def helper(nums:list, curr: int, idx: int):
            
            if curr>=len(nums)-1:
                return True
            
            elif curr<len(nums)-1 and idx>=len(nums):
                return False
            
            elif curr<len(nums)-1 and nums[idx]==0:
                return False
            
            else:
                result = False
                for i in range(nums[idx],0,-1):
                    
                    if helper(nums, curr+i, idx+i):
                        result = True
                        break
                
                
                
                return result
        
        if len(nums)==1:
            return True
        
        return helper(nums,0,0)
        
class Solution:
    def canJump(self, nums: List[int]) -> bool:
        
        end = len(nums) - 1
        
        for i in range(len(nums)-2, -1, -1):
            
            if i + nums[i] >=end:
                end = i
        
        return end == 0

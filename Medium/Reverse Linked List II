# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def reverseBetween(self, head: Optional[ListNode], left: int, right: int) -> Optional[ListNode]:
        left-=1
        right-=1
        curr = head
        nums = []
        while curr:
            nums.append(curr.val)
            curr = curr.next
        
        nums = nums[:left] + nums[right:left:-1] + [nums[left]] + nums[right+1:]
        
        head = ListNode(0)
        curr = head
        
        for num in nums:
            curr.next = ListNode(num)
            curr = curr.next
            
            
        return head.next

# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def swapPairs(self, head: Optional[ListNode]) -> Optional[ListNode]:
        
        dummy = ListNode(0)
        
        dummy.next = head
        
        prev = dummy
        curr = dummy.next
        
        while True:
            if curr==None:
                break
            
            elif curr.next==None:
                prev.next = curr
                break
            else:
                nxt = curr.next.next
            
            
            prev.next = curr.next
            prev.next.next = curr
            curr.next = None
            curr = nxt
            
            prev = prev.next.next
        
        return dummy.next
